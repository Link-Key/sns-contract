<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- 指定数据库驱动的jdbc驱动jar包的位置 -->
    <classPathEntry
            location="C:\Tools\maven\repository\mysql\mysql-connector-java\5.1.44\mysql-connector-java-5.1.44.jar" />

    <!-- <context id="mysql" defaultModelType="hierarchical" targetRuntime="MyBatis3Simple" >-->
    <context id="Tables" targetRuntime="MyBatis3">
        <!-- 生成的 Java 文件的编码 -->
        <property name="javaFileEncoding" value="UTF-8"/>
        <!-- 格式化 Java 代码 -->
        <property name="javaFormatter" value="org.mybatis.generator.api.dom.DefaultJavaFormatter"/>
        <!-- 格式化 XML 代码 -->
        <property name="xmlFormatter" value="org.mybatis.generator.api.dom.DefaultXmlFormatter"/>
        <commentGenerator>
            <!-- 是否生成注释代时间戳 -->
            <property name="suppressDate" value="true"/>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
            <!--是否生成注释-->
            <!--<property name="addRemarkComments" value="true"/>-->
        </commentGenerator>

        <!-- JDBC连接 -->
        <!-- JDBC连接 -->
        <jdbcConnection
                driverClass="com.mysql.jdbc.Driver"
                connectionURL="jdbc:mysql://localhost:3306/free-eagle"
                userId="root"
                password="123qwe">
        </jdbcConnection>

        <!-- 非必需，类型处理器，在数据库类型和java类型之间的转换控制-->
        <!-- 默认false，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer，为 true时把JDBC DECIMAL 和
         NUMERIC 类型解析为java.math.BigDecimal -->
        <javaTypeResolver>
            <!-- 是否使用bigDecimal， false可自动转化以下类型（Long, Integer, Short, etc.） -->
            <property name="forceBigDecimals" value="true" />
        </javaTypeResolver>

        <!-- 生成实体的位置 -->
        <javaModelGenerator targetPackage="com.peifeng.be.model" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
        </javaModelGenerator>

        <!-- 生成 Mapper.xml文件位置的位置 -->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <!-- 生成 Mapper 的实体类的位置 -->
        <javaClientGenerator targetPackage="com.peifeng.be.mapper" type="XMLMAPPER" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>



        <!-- 设置数据库的表名和实体类名 -->
<!--        <table schema="free-eagle" tableName="account" enableSelectByPrimaryKey="true"-->
<!--               domainObjectName="Account" enableCountByExample="false"-->
<!--               enableDeleteByExample="true" enableSelectByExample="true"-->
<!--               enableUpdateByExample="false">-->
<!--        </table>-->

<!--        <table schema="free-eagle" tableName="contract" enableSelectByPrimaryKey="true"-->
<!--               domainObjectName="Contract" enableCountByExample="false"-->
<!--               enableDeleteByExample="false" enableSelectByExample="false"-->
<!--               enableUpdateByExample="false">-->
<!--        </table>-->

        <table schema="free-eagle" tableName="robot_account" enableSelectByPrimaryKey="true"
               domainObjectName="RobotAccount" enableCountByExample="true"
               enableDeleteByExample="true" enableSelectByExample="true"
               enableUpdateByExample="true">
        </table>

    </context>

</generatorConfiguration>


